<?xml version='1.0' encoding='utf-8'?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="co.FAITapp.ios"
        version="0.0.1">

	<name>FAIT</name>

	<description>
		A social networking app that connects you with the people who are around you based on interests.
	</description>

	<author email="mrcs_nesbitt@yahoo.com" href="http://faitapp.co/">
		Mar Nesbitt
	</author>

	 <platform name="android">
              <icon src="res/icon/android/ldpi.png" density="ldpi" />
              <icon src="res/icon/android/mdpi.png" density="mdpi" />
              <icon src="res/icon/android/hdpi.png" density="hdpi" />
              <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
              <icon src="res/icon/arandroid/xxhdpi.png" density="xxhdpi" />
               <icon src="res/icon/android/xxxhdpi.png" density="xxxhdpi" />
     </platform>
   <icon src="res/icon/ios/Icon.png" platform="ios" width="57" height="57" density="mdpi" />
     <platform name="ios">
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="res/icon/ios/Icon-60.png" width="60" height="60" />
              <icon src="res/icon/ios/Icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="res/icon/ios/Icon-76.png" width="76" height="76" />
              <icon src="res/icon/ios/Icon-76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="res/icon/ios/Icon-40.png" width="40" height="40" />
              <icon src="res/icon/ios/Icon-40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="res/icon/ios/Icon.png" width="57" height="57" />
              <icon src="res/icon/ios/Icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="res/icon/ios/Icon-72.png" width="72" height="72" />
              <icon src="res/icon/ios/Icon-72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="res/icon/ios/Icon-Small.png" width="29" height="29" />
              <icon src="res/icon/ios/Icon-Small@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="res/icon/ios/Icon-50.png" width="50" height="50" />
              <icon src="res/icon/ios/Icon-50@2x.png" width="100" height="100" />
     </platform>


	

	<feature name="http://api.phonegap.com/1.0/device" />

	<preference name="permissions" value="none" />

	<preference name="phonegap-version" value="3.1.0" />

	<preference name="orientation" value="portrait" />


	<preference name="fullscreen" value="true" />

	<preference name="webviewbounce" value="true" />

	<preference name="target-device" value="universal" />

	<!-- ios -->
	<preference name="prerendered-icon" value="true" />
	<preference name="stay-in-webview" value="false" />

  <gap:plugin name="org.apache.cordova.camera" version="0.3.6" source="plugins.cordova.io" />
  <gap:plugin name="org.apache.cordova.media-capture" version="0.3.6" source="plugins.cordova.io"/>
	<access origin="*" />
</widget>